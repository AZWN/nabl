module signatures/Types

imports
  common/Identifiers
  
context-free syntax

  ModuleSection.Signature = <
    signature

    <TypeDecl*>
  > {longest-match}

  TypeDecl.TypeDecl = [[Id]]
  TypeDecl.TypeDecl = [[Id]([{TypeParam ","}*])]
  
  TypeParam.Decl  = <declaration>
  TypeParam.Type  = <<Variance> type>
  TypeParam.Types = <<Variance> type *>
  
  Variance.Invariant     = <=>
  Variance.Covariant     = <+>
  Variance.Contravariant = <->

lexical syntax

  SectionKeyword = "signature"