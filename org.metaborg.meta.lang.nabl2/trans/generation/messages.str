module generation/messages

imports

  signatures/rules/core/-

rules

  default-message: _ -> Term |[ Message(Error(),None(),term__) ]|

  message-to-term: Message(kind,msg,term) -> Term |[ Message(~kind',~msg,~term) ]|
  with kind' := <kind-to-term> kind

  kind-to-term: Error()   -> Term |[ Error() ]|
  kind-to-term: Warning() -> Term |[ Warning() ]|
  kind-to-term: Note()    -> Term |[ Note() ]|