rules

  nam-get-uses-keys :
    MethodCall(exp, f, e*) -> [f]
    where [MT(t*, t)] := <index-lookup ; index-get-data-all(|Type())> f
    where e := <type-of> exp
    where t* := <type-of> e*

  nam-get-uses :
    MethodCall(exp, f, e*) -> [(method(), [f])]
    where [MT(t*, t)] := <index-lookup ; index-get-data-all(|Type())> f
    where e := <type-of> exp
    where t* := <type-of> e*

  nam-annotate-names(|path__):
    MethodCall(exp, f, e*) -> <MethodCall(
                                 id
                               , nam-annotate-use(|method(), entity(), e)
                               , id
                               )>
    where [MT(t*, t)] := <index-lookup ; index-get-data-all(|Type())> f
    where e := <type-of> exp
    where t* := <type-of> e*