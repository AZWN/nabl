module nabl2/lang/rules/Names

imports

  nabl2/shared/common/Identifiers
  nabl2/lang/common/Identifiers

template options

  keyword -/- [a-zA-Z0-9\']

syntax

  NaBL2-CGenRuleDef-CF.NoName     =
  NaBL2-CGenRuleDef-CF.NameNoArgs = NaBL2-RuleId-LEX
  NaBL2-CGenRuleDef-CF.Name       = NaBL2-RuleId-LEX "(" LAYOUT?-CF NaBL2-RuleIds-CF LAYOUT?-CF ")"


  NaBL2-CGenRuleRefTop-CF.NoName     =
  NaBL2-CGenRuleRefTop-CF.NameNoArgs = NaBL2-RuleId-LEX
  NaBL2-CGenRuleRefTop-CF.Name       = NaBL2-RuleId-LEX "(" LAYOUT?-CF NaBL2-CGenRuleRefs-CF LAYOUT?-CF ")"

  NaBL2-CGenRuleRef-CF.NoName     = "default"
  NaBL2-CGenRuleRef-CF.NameNoArgs = NaBL2-RuleId-LEX
  NaBL2-CGenRuleRef-CF.Name       = NaBL2-RuleId-LEX "(" LAYOUT?-CF NaBL2-CGenRuleRefs-CF LAYOUT?-CF ")"

context-free syntax

  NaBL2-RuleIds = <<{NaBL2-RuleId ", "}*>>
  
  NaBL2-CGenRuleRefs = <<{NaBL2-CGenRuleRef ", "}*>>
