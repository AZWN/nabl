module nabl2/lang/signatures/CGen

imports

  nabl2/shared/common/Sorts
  nabl2/lang/rules/Rules

template options

  keyword -/- [a-zA-Z0-9\']

context-free syntax

  Signature.CGen = <
    constraint generator
      <{CGenSig "\n"}*>
  >
  
  CGenSig.CGenSig = <<RuleName> [[ <SortRef> <CGenSigParams> <CGenSigType> ]]>
 
  CGenSigParams   = <^ (<{SortRef ","}*>)>

  CGenSigType.NoType = <>
  CGenSigType.Type   = <: <SortRef>>

