module signature-extraction/main

imports
  libstrc
  analysis/signatures
  util/-

rules

  extract-sigs:
    (_, _, ast@Module(name,_), path, project-path) -> (filename, result)
    with
      filename := <src-gen-file(|project-path, "nabl2", ".nabl2sig")> name;
      result := <module-extract-signatures> ast
