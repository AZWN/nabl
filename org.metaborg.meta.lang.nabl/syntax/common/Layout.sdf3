module common/Layout

sorts LongCom CommChar Asterisk Eof 

lexical syntax

  LAYOUT   = [\t\ \n\r] 

  LAYOUT   = "//" ~[\n]* Eol
  Eol      = [\n]
  Eol      = Eof
  Eof      = 
 
  LAYOUT   = LongCom
  LongCom  = "/*" CommChar* "*/"
  CommChar = ~[\*]
  CommChar = Asterisk
  Asterisk = "*"
  
lexical restrictions

  Asterisk -/- [\/]
  Eof      -/- ~[]

context-free restrictions

  LAYOUT? -/- [\ \t\n\r]
  LAYOUT? -/- [\/].[\*]
  LAYOUT? -/- [\/].[\/]
