module src-gen/pp/core/Scopes-pp

imports
  libstratego-gpp
  runtime/tmpl/pp
  src-gen/signatures/core/Scopes-sig


imports
  src-gen/signatures/common/Identifiers-sig
  src-gen/signatures/core/Namespaces-sig
  src-gen/signatures/terms/Vars-sig


imports
  src-gen/pp/common/Identifiers-pp
  src-gen/pp/core/Namespaces-pp
  src-gen/pp/terms/Vars-pp


strategies
  prettyprint-ScopeID =
    ![S(<is-string>)]

  prettyprint-example =
    prettyprint-ScopeID


strategies
  prettyprint-example =
    prettyprint-LocalScope

  prettyprint-example =
    prettyprint-Scope

  prettyprint-LocalScope :
    NamedScope(t0__, t1__) -> [ H(
                                  [SOpt(HS(), "0")]
                                , [t0__', S(" "), t1__']
                                )
                              ]
    with t0__' := <pp-one-Z(prettyprint-NamespaceRef)> t0__
    with t1__' := <pp-one-Z(prettyprint-VarRef)> t1__

  is-LocalScope =
    ?NamedScope(_, _)

  prettyprint-LocalScope :
    CurrentScope(t0__) -> [ H(
                              [SOpt(HS(), "0")]
                            , [ S("current ")
                              , t0__'
                              , S(" scope")
                              ]
                            )
                          ]
    with t0__' := <pp-one-Z(prettyprint-NamespaceRef)> t0__

  is-LocalScope =
    ?CurrentScope(_)

  prettyprint-LocalScope :
    TermScope(t0__, t1__) -> [ H(
                                 [SOpt(HS(), "0")]
                               , [t0__', S(" scope  at "), t1__']
                               )
                             ]
    with t0__' := <pp-one-Z(prettyprint-NamespaceRef)> t0__
    with t1__' := <pp-one-Z(prettyprint-VarRef)> t1__

  is-LocalScope =
    ?TermScope(_, _)

  prettyprint-LocalScope :
    Enclosing(t0__, t1__) -> [ H(
                                 [SOpt(HS(), "0")]
                               , [ S("enclosing ")
                                 , t0__'
                                 , S(" of ")
                                 , t1__'
                                 ]
                               )
                             ]
    with t0__' := <pp-one-Z(prettyprint-NamespaceRef)> t0__
    with t1__' := <pp-one-Z(prettyprint-LocalScope)> t1__

  is-LocalScope =
    ?Enclosing(_, _)

  prettyprint-Scope :
    GlobalScope() -> [ H(
                         [SOpt(HS(), "0")]
                       , [S("global scope")]
                       )
                     ]

  is-Scope =
    ?GlobalScope()

  prettyprint-Scope :
    t0__ -> [ H(
                [SOpt(HS(), "0")]
              , [t0__']
              )
            ]
    where not(is-Scope)
    where t0__' := <pp-one-Z(prettyprint-LocalScope)> t0__

  prettyprint-Scope :
    Anonymous(t0__) -> [ H(
                           [SOpt(HS(), "0")]
                         , [S("new scope in "), t0__']
                         )
                       ]
    with t0__' := <pp-one-Z(prettyprint-Scope)> t0__

  is-Scope =
    ?Anonymous(_)

  is-LocalScope =
    fail

  is-Scope =
    fail


strategies
  prettyprint-example =
    prettyprint-Clause

  prettyprint-Clause :
    ChildScope(t0__, t1__) -> [ H(
                                  [SOpt(HS(), "0")]
                                , [ t0__'
                                  , S(" scopes ")
                                  , t1__'
                                  , S(" at child nodes")
                                  ]
                                )
                              ]
    with t0__' := <pp-one-Z(prettyprint-Scope)> t0__
    with t1__' := <pp-one-Z(prettyprint-NamespaceRef)> t1__

  is-Clause =
    ?ChildScope(_, _)

  prettyprint-Clause :
    SubsequentScope(t0__, t1__) -> [ H(
                                       [SOpt(HS(), "0")]
                                     , [ t0__'
                                       , S(" scopes ")
                                       , t1__'
                                       , S(" at subsequent nodes")
                                       ]
                                     )
                                   ]
    with t0__' := <pp-one-Z(prettyprint-Scope)> t0__
    with t1__' := <pp-one-Z(prettyprint-NamespaceRef)> t1__

  is-Clause =
    ?SubsequentScope(_, _)

  prettyprint-Clause :
    NodeScope(t0__, t1__) -> [ H(
                                 [SOpt(HS(), "0")]
                               , [ S("requires ")
                                 , t0__'
                                 , S(" scope at ")
                                 , t1__'
                                 ]
                               )
                             ]
    with t0__' := <pp-one-Z(prettyprint-NamespaceRef)> t0__
    with t1__' := <pp-one-Z(prettyprint-VarRef)> t1__

  is-Clause =
    ?NodeScope(_, _)

  is-Clause =
    fail