module statix/lang/scope-extension/constraints

imports

  nabl2/api

  signatures/statix/lang/-
  statix/lang/-
  statix/lang/statics/-

rules

  ext-explicate-set(|a): ExtParam(y, i) -> ExtParam(d, i)
    with d := <nabl2-get-ast-property(|a,"decl")> y

  ext-explicate-set(|a): ExtVar(y) -> ExtVar(d)
    with d := <nabl2-get-ast-property(|a,"decl")> y
