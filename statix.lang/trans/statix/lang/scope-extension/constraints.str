module statix/lang/scope-extension/constraints

imports

  nabl2/api

  signatures/statix/lang/-
  statix/lang/-
  statix/lang/statics/-

rules

  ext-explicate-ids(|a): ExtIsCovered(x) -> ExtIsCovered(d)
    with d := <nabl2-get-ast-property(|a,"decl")> x

  ext-explicate-ids(|a): ExtParam(x, i) -> ExtParam(d, i)
    with d := <nabl2-get-ast-property(|a,"decl")> x

  ext-explicate-ids(|a): ExtVar(x) -> ExtVar(d)
    with d := <nabl2-get-ast-property(|a,"decl")> x
