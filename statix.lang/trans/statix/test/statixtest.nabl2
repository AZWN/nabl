module statix/test/statixtest

imports

  signatures/statix/lang/-

rules

  [[ t@Test(vs, c, sections) ^ (s) ]] :=
    new s', s' -P-> s, @t.scope := s',
    Sections[[ sections ^ (s', s) ]],
    new s'', s'' -P-> s',
    Map1T(VarDecl)[[ vs ^ (s'') : _ ]],
    distinct/name D(s'')/Var | error $[Duplicate local variable [NAME]] @NAMES,
    Constraint[[ c ^ (s'') ]].
