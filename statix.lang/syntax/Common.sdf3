module Common

lexical syntax

  INT = [0-9]+

  ID    = [a-zA-Z] [a-zA-Z0-9\_]*
  UCID  = [A-Z] [a-zA-Z0-9\_]*
  LCID  = [a-z] [a-zA-Z0-9\_]*
  VARID = [a-zA-Z] [a-zA-Z0-9\_]* [\']*

  SID = [A-Z] [a-zA-Z0-9\_\-\']*
  SID = [a-z] [a-zA-Z0-9\_\-\']*

lexical restrictions

  ID    -/- [a-zA-Z0-9\_\']
  UCID  -/- [a-zA-Z0-9\_\']
  LCID  -/- [a-zA-Z0-9\_\']
  VARID -/- [a-zA-Z0-9\_\']

  SID -/- [a-zA-Z0-9\_\-\']
