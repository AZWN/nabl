module statix

language StatixTest

test true succeeds [[
  resolve true
]] analysis succeeds
   run evaluate-test to SUCCEEDS()

test false fails [[
  resolve false
]] analysis succeeds
   run evaluate-test to FAILS()

test non-linear pattern succeeds [[
  resolve c([], [])
  rules
    c : list(string) * list(string)
    c(xs, xs).
]] analysis succeeds
   run evaluate-test to SUCCEEDS()

test return var for tuple output succeeds [[
  resolve c(1) == (1, 1)
  rules
    c : int -> int * int
    c(i) = r :- r == (i, i).
]] analysis succeeds
   run evaluate-test to SUCCEEDS()
